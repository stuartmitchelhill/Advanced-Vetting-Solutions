{% extends "base.twig" %}

{% block page_class(' blog-list-page') %}

{% block content %}
	<div class="block block--page-banner">
		<div class="wrapper cms-content">
			<h1>{{ post.title }}</h1>
		</div>
	</div>

	<div class="block padded block--posts-list">
		<div class="wrapper">
			<div class="posts-list">
				{% for post in posts %}
				  {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
				{% endfor %}
			</div>
		</div>
	</div>

  {% if pagination.pages %}
    {% include 'partials/_pagination.twig' %}
  {% endif %}
{% endblock %}