{% extends "base.twig" %}

{% block content %}
  {% include 'partial/_page-banner.twig' %}

	<div class="block padded block--posts-list">
		<div class="wrapper">
			<div class="posts-list">
        {% for post in posts %}
          {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
        {% endfor %}
			</div>
		</div>
	</div>

  {% if pagination.pages %}
    {% include 'partials/_pagination.twig' %}
  {% endif %}
{% endblock %}