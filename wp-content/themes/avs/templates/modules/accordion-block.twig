<div class="block block--accordion-list {{ content.block_appearance.vertical_spacing }} {{ content.block_appearance.background_colour }}">
    <div class="wrapper cms-content {{ content.block_appearance.restricted_width }}">
        {% if content.block_content.title %}
            <h2>{{ content.block_content.title }}</h2>
        {% endif %}
        {% if content.block_content.introduction %}
            {{ content.block_content.introduction }}
        {% endif %}
        <div class="accordion-list">
            {% for item in content.block_content.accordion_item %}
                <div class="accordion-item {% if item.is_open %}is-open{% endif %}">
                    <p class="accordion-title js-accordion-trigger">{{ item.item_title }}
                        <span class="icon {% if item.is_open %}icon-minus{% else %}icon-plus{% endif %}"></span>
                    </p>
                    <div class="accordion-hidden">
                        {{ item.item_content }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>